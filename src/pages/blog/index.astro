---
import Layout from "../../layouts/Layout.astro"
import Header from "../../components/Header.astro"
import Footer from "../../components/Footer.astro"
import PostCard from "../../components/PostCard.astro"
---

<Layout>
	<div class="min-h-screen flex flex-col">
		<Header />

		<main class="grow container mx-auto px-4 py-12">
			<h1 class="text-4xl font-bold text-center mb-6 text-primary">
				Blog de Sysmo
			</h1>
			<p class="text-center mb-10 text-lg text-text">
				Noticias, lanzamientos y guías sobre infraestructura cloud y
				Kubernetes.
			</p>

			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
				<PostCard
					title="Lanzamiento de VPS Premium: Rendimiento Sin Límites"
					date="25 de noviembre de 2025"
					excerpt="Hoy anunciamos nuestro VPS premium, con NVMe, redes dedicadas y soporte 24/7."
					slug="vps-premium"
				/>

				<PostCard
					title="Nuevo Cluster Kubernetes: Escalabilidad Automática"
					date="18 de noviembre de 2025"
					excerpt="Implementamos un sistema de clusters Kubernetes con escalado automático y observabilidad integrada."
					slug="kubernetes-cluster"
				/>

				<PostCard
					title="Certificación ISO 27001: Seguridad Garantizada"
					date="11 de noviembre de 2025"
					excerpt="Sysmo obtiene la certificación ISO 27001 y fortalece sus prácticas de seguridad."
					slug="iso-27001"
				/>

				<PostCard
					title="Expansión Global: Nuevos Data Centers"
					date="4 de noviembre de 2025"
					excerpt="Abrimos nuevos data centers en Europa y Asia para mejorar latencia y disponibilidad."
					slug="data-centers"
				/>

				<PostCard
					title="Integración con IA: Optimización Inteligente"
					date="28 de octubre de 2025"
					excerpt="Introducimos integración con IA para optimizar recursos automáticamente."
					slug="ai-integration"
				/>

				<PostCard
					title="Premio a la Innovación: Reconocimiento del Sector"
					date="21 de octubre de 2025"
					excerpt="Sysmo recibe el premio a la innovación por sus soluciones cloud."
					slug="innovation-award"
				/>
			</div>
		</main>

		<Footer />
	</div>
</Layout>
